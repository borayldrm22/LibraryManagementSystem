@model Kutuphane2.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Yeni Ürün Oluştur</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Ürün Bilgileri</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Ürün Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Ürün adını girin" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Brand" class="control-label">Marka</label>
                    <input asp-for="Brand" class="form-control" placeholder="Ürün markasını girin" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category" class="control-label">Kategori</label>
                    <input asp-for="Category" class="form-control" placeholder="Ürün kategorisini girin" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Fiyat</label>
                    <input asp-for="Price" class="form-control" placeholder="Ürün fiyatını girin" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Ürün açıklamasını girin"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFileName" class="control-label">Görsel Dosya Adı</label>
                    <input asp-for="ImageFileName" class="form-control" placeholder="Görsel dosya adını girin" />
                    <span asp-validation-for="ImageFileName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreatedAt" class="control-label">Oluşturulma Tarihi</label>
                    <input asp-for="CreatedAt" class="form-control" placeholder="Oluşturulma tarihini girin" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
